<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6F5F5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#2196F3"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:foregroundGravity="center_horizontal"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:id="@+id/singleProfileImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/envervalencia" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/updateEditTextName"
                    style="@style/modifiedUpdateEditText"
                    android:hint="Name"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:inputType="textPersonName"
                    android:maxLines="1"/>

                <EditText
                    android:id="@+id/updateEditTextSurname"
                    style="@style/modifiedUpdateEditText"
                    android:hint="Surname"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:inputType="textPersonName"
                    android:maxLines="1"/>

            </LinearLayout>




            <!--<EditText
                android:id="@+id/updateEditTextName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="Name"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textColor="#fff"
                android:textSize="13sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/updateEditTextSurname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="Surname"
                android:textSize="13sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:inputType="textPersonName"
                android:maxLines="1"/>-->
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:orientation="horizontal"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/singleProfilecountOfIlanHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="İlan Sayısı"
                        android:textSize="17dp"
                        android:textColor="#000"/>
                    <TextView
                        android:id="@+id/singleProfilecountOfIlan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="20dp"
                        android:textColor="#2196F3"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/singleProfilePointHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age"
                        android:textSize="17dp"
                        android:textColor="#000"/>
                    <EditText
                        android:id="@+id/updateEditTextAge"
                        style="@style/modifiedUpdateEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:hint="Age"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:textColor="#2196F3"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/singleProfileFromThisDayHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From This Day"
                        android:textSize="17dp"
                        android:textColor="#000"/>
                    <TextView
                        android:id="@+id/singleProfileFromThisDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Şu Tarihren Beri"
                        android:textSize="15sp"
                        android:textColor="#2196F3"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="5dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true">

            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_person_pin_24"/>

                <TextView
                    android:id="@+id/updateTextCustomerOrHouseOwner"
                    style="@style/modifiedUpdateEditText"
                    android:text=""
                    android:maxLines="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_verified_user_24"/>
                <!--<TextView
                    android:id="@+id/updateEditTextUsernameE"
                    style="@style/modifiedUpdateEditText"
                    android:hint="Username"
                    android:inputType="textPersonName"
                    android:maxLines="1">-->
                <EditText
                    android:id="@+id/updateEditTextUsername"
                    style="@style/modifiedUpdateEditText"
                    android:hint="Username"
                    android:inputType="textPersonName"
                    android:maxLines="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_home_24"/>
                <EditText
                    android:id="@+id/updateEditTextHomeTown"
                    style="@style/modifiedUpdateEditText"
                    android:hint="HomeTown"
                    android:inputType="textPersonName"
                    android:maxLines="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_school_24"/>
                <EditText
                    android:id="@+id/updateEditTextDepartment"
                    style="@style/modifiedUpdateEditText"
                    android:hint="Department"
                    android:inputType="textPersonName"
                    android:maxLines="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_school_24"/>
                <EditText
                    android:id="@+id/updateEditTextGrade"
                    style="@style/modifiedUpdateEditText"
                    android:hint="Grade"
                    android:inputType="textPersonName"
                    android:maxLines="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_passwordblue_24"/>
                <EditText
                    android:id="@+id/updateEditTextPassword"
                    style="@style/modifiedUpdateEditText"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLines="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_phone_android_24"/>
                <EditText
                    android:id="@+id/updateEditTextPhone"
                    style="@style/modifiedUpdateEditText"
                    android:hint="Phone"
                    android:inputType="phone"
                    android:maxLines="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="25dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_email_24"/>
                <EditText
                    android:id="@+id/updateEditTextEmail"
                    style="@style/modifiedUpdateEditText"
                    android:hint="Email"
                    android:inputType="textPersonName"
                    android:maxLines="1"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_transgender_24"/>
                <EditText
                    android:id="@+id/updateEditTextGender"
                    style="@style/modifiedUpdateEditText"
                    android:hint="Gender"
                    android:inputType="textPersonName"
                    android:maxLines="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp">
                <!--<ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_transgender_24"/>-->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/circularLoginButton"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:backgroundTint="@color/blue"
                    android:onClick="updateProfile"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="0dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="0dp"
                    android:text="Update"
                    app:cornerRadius="26dp" />
                <!--
                <TextView
                    android:id="@+id/singleProfileUpdateInfoButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update Infos"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:paddingLeft="15dp"
                    android:layout_gravity="center_vertical"/>-->

            </LinearLayout>


        </LinearLayout>

    </ScrollView>



</LinearLayout>

